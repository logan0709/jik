ngx_feature="Markdown"
ngx_feature_name=markdown
ngx_feature_run=no
ngx_feature_incs="#include <mkdio.h>"
ngx_feature_path=
ngx_feature_libs=-lmarkdown
ngx_feature_test=
. auto/feature

if [ $ngx_found = yes ]; then
    ngx_addon_name=ngx_http_mdhandler_module
    HTTP_MODULES="$HTTP_MODULES ngx_http_mdhandler_module"
    NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/src/ngx_http_markdown_handler_module.c"
    CORE_LIBS="$CORE_LIBS -lmarkdown"
else
    cat << END
$0: error: the Markdown handler addon requires libdiscount: http://www.pell.portland.or.us/~orc/Code/discount/.
END
    exit 1
fi
